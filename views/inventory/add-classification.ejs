<div id="add-classification">
    <h1><%= title %></h1>
    <%- messages() %>

    <form>
        <div class="form-error-box">
            <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error => { %>
                        <li><%= error.msg%></li>
                    <% }) %>
                </ul>
            <% } %>
        </div>
        <div>
            <label for="classification_name">Classification Name</label>
        <p class="form-hint">Name must be alphabetic characters only</p>
        <input type="text" id="classification_name" name="classification_name" pattern="[a-zA-Z]+" required value="<%= locals.classification_name %>">
        </div>
        <input type="submit" value="Add Classification">
    </form>
</div>