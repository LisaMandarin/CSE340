<div id="account-management">
    <% if (title) { %>
        <h1><%= title %></h1>
    <% } %>

    <h2>Welcome <%= locals.account_firstname %></h2>
    
    <%- messages() %>
    
    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error => { %>
                <li><%= error.msg%></li>
            <% }) %>
        </ul>
    <% } %>

    <%- link %>

    <% if (locals.accountData.account_type === "Employee" || locals.accountData.account_type === "Admin") { %>
        <div class="inv-management-container">
            <h3>Inventory Management</h3>
            <div><a href="/inv">Manage Inventory</a></div>
        </div>
    <% } %>
</div>
