<div id="message-management">
    <h1><%= title %></h1>

    <%- messages() %>

    <% if (errors) { %>
        <% errors.array().forEach(error => { %>
            <ul class="notice">
                <li><%= error.msg %></li>
            </ul>
        <% }) %>
    <% } %>

    <ul class="font-1">
        <li><a href="/message/add-message">Create New Message</a></li>
        <li><a href="/message/archieve-message">View Archived Messages</a></li>
    </ul>

    <div>
        <table>
            <tr>
                <th>Received</th>
                <th>Subject</th>
                <th>From</th>
                <th>Read</th>
            </tr>
            <tbody>
                <%- msgTable %>
            </tbody>
        </table>
    </div>
</div>